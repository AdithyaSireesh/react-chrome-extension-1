{
  "short_name": "React App",
  "name": "React Extension",
  "manifest_version": 2,
  "content_scripts" : [
    {
      "matches": ["https://reactjs.org/*"],
      "css": ["/static/css/content.css"],
      "js": ["/static/js/content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "index.html",
    "default_title": "React Ext"
  },
  "permissions": [
    "activeTab"
  ],
  "icons": {
    "16": "react16.png",
    "48": "react48.png",
    "128": "react128.png"
  },
  "version": "1.0"
}
